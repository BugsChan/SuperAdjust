{
	"manifest_version": 2,
	"name": "超级点评",
	"version": "1.0.0",
	"description": "评论一切网页的浏览器插件",
	
	"background":{
		"scripts": ["js/background.js"]
	},
	
	"browser_action": {
		"default_icon": "images/logo.png",
		"default_title": "超级点评",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/config.js", "js/vue.js","js/body_inject.js"],
			"css": ["css/Adjust.css"],
			"run_at": "document_end"
		}
	],
	
	"permissions": [
		"storage"
	]
}